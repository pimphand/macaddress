/usr/lib/centreon/plugins/centreon_hp_procurve.pl --list-mode
# =======================
# ðŸ”¹ INTERFACES (Status & Traffic Monitoring)
# =======================
/usr/lib/centreon/plugins/centreon_hp_procurve.pl \
  --plugin=network::hp::procurve::snmp::plugin \
  --mode=interfaces \
  --hostname=192.168.53.10 \
  --snmp-version=2c \
  --snmp-community=public \
  --name --add-status --add-traffic


